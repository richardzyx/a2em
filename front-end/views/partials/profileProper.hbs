<div class="row">
    <div class="col-lg-12">
        <h1>Name: {{pageTitle}}</h1>
        <p><b>Address: </b> {{personAddress}}</p>
        <p><b>Zip: </b> {{personZip}}</p>
        <p><b>Email: </b><a href="mailto:{{personEmail}}" >{{personEmail}}</a></p>
        <p><b>Total Amount Donated:</b> ${{personAmount}}</p>
        <h3>Donations:</h3>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Amount</th>
                    <th>Flag</th>
                </tr>
            </thead>
            <tbody>
            {{#each personDonations}}
                <tr>
                    <td>{{this.date}}</td>
                    <td>{{this.time}}</td>
                    <td>{{this.amount}}</td>    
                    <td><a href="">{{this.flag}}</a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>

    </div>
</div>